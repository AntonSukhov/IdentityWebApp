@page
@{
    ViewData["Title"] = "Утверждения";
    ViewData["ActivePage"] = ManageNavPages.Claims;
}
<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>Вот список Ваших утверждений:</p>
        <p>
            <ul>
                @{
                    foreach (var claim in User.Claims)
                    {
                        <li>@claim.Type: @claim.Value</li>
                    }
                }
            </ul>
        </p>
    </div>
</div>